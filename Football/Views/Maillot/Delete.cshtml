@model Football.Models.Maillot

@{
    ViewData["Title"] = "Supprimer un Maillot";
}

<h1 class="text-center text-uppercase text-warning mt-4">Supprimer un Maillot</h1>
<p class="text-center mb-4" style="color: #e63946; font-weight: bold;">
    Êtes-vous sûr de vouloir supprimer ce maillot ? Cette action est irréversible.
</p>

<div class="container">
    <div class="row justify-content-center">
        <!-- Contenu aligné -->
        <div class="col-md-8"
             style="background-image: url('/images/navback.jpg');
                    background-size: cover;
                    background-position: center;
                    border-radius: 10px;
                    padding: 20px;">
            <div class="card shadow-lg" style="background-color: rgba(255, 255, 255, 0.9);">
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Détails du maillot -->
                        <div class="col-md-6" style="background-image: url('/images/divback4.jpg');
                            background-size: cover;
                            background-position: center;
                            border-radius: 10px;
                            padding: 20px;">
                            <dl class="row">
                                <dt class="col-sm-4 text-dark font-weight-bold">Description</dt>
                                <dd class="col-sm-8">@Model.Description</dd>

                                <dt class="col-sm-4 text-dark font-weight-bold">Couleur</dt>
                                <dd class="col-sm-8">@Model.Couleur</dd>

                                <dt class="col-sm-4 text-dark font-weight-bold">Taille</dt>
                                <dd class="col-sm-8">@Model.Taille</dd>

                                <dt class="col-sm-4 text-dark font-weight-bold">Prix</dt>
                                <dd class="col-sm-8">@Model.Prix.ToString("C")</dd>

                                <dt class="col-sm-4 text-dark font-weight-bold">Pays</dt>
                                <dd class="col-sm-8">@Model.Pays</dd>
                            </dl>
                        </div>
                        <!-- Aperçu de l'image -->
                        <div class="col-md-6 text-center d-flex flex-column justify-content-center border border-dark rounded-circle shadow-sm mb-3"
                             style="max-width: 100%; max-height: 400px; background-image: url('/images/divback4.jpg'); margin-top: 40px;">
                            <img src="@Model.Picture" alt="@Model.Description"
                                 class="rounded-circle shadow-sm"
                                 style="max-width: 100%; max-height: 100%;" />
                        </div>
                    </div>
                    <!-- Confirmation de suppression -->
                    <form asp-action="Delete" class="text-center">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-danger btn-lg px-5" style="background-image: url('/images/navback.jpg');">
                                Supprimer
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 ml-3" style="background-image: url('/images/divback4.jpg');">
                                Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
